Css
body {
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    background-color: #f3f4f6;
}

.ramo {
    display: flex;
    gap: 50px;
}

.tulipan {
    width: 100px;
    height: 100px;
    background-color: #ff6f61;
    border-radius: 50%;
    position: relative;
    animation: mover 5s infinite alternate;
    cursor: pointer;
}

.tulipan:hover {
    background-color: #ff9a8b;
}

#frase {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 1.5rem;
    color: #333;
    display: none;
}

@keyframes mover {
    0% {
        transform: rotate(0deg) translateY(0);
    }
    100% {
        transform: rotate(360deg) translateY(-30px);
    }
}
JavaScript 
const tulipanes = document.querySelectorAll('.tulipan');
const fraseDiv = document.getElementById('frase');

tulipanes.forEach(tulipan => {
    tulipan.addEventListener('mouseover', function() {
        const frase = tulipan.getAttribute('data-frase');
        fraseDiv.textContent = frase;
        fraseDiv.style.display = 'block';
    });

    tulipan.addEventListener('mouseout', function() {
        fraseDiv.style.display = 'none';
    });
});
